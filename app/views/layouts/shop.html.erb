<!DOCTYPE html>
<html>
<head>
  <title><%= @shop.name %></title>
  <%= stylesheet_link_tag 'style' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  
  <div id="header">
    <% if @shop.logo.exists? %>
      <%= image_tag @shop.logo.url %>
    <% end %>
    <span></span>
  </div>

  <div id="nav">
    <ul>
      <li><%= link_to_unless_current 'Welcome', @shop %></li>
      <li><%= link_to_unless_current 'Products', products_path %></li>
      <li><%= link_to_unless_current 'Log out', shops_path %></li>
    </ul>
  </div>

  <div id="content">
    <%= yield %>
  </div>

</body>
</html>
