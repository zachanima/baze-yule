<table class="product_index">
  <tr>
  <% @products.each do |product| %>
      <td>
        <% link_to shop_product_path(@shop, product) do %>
          <%= image_tag(product.image.url(:thumb)) %>
          <%= product.name %>
        <% end %>
      </td>
    <%=raw cycle('', '', '</tr><tr>') %>
  <% end %>
  </tr>
</table>
