<%= form_for @product, :html => { :multipart => true } do |f| %>
  <fieldset>
    <legend>Fields for product</legend>
    <ol>
      <li>
        <%= f.label :name, :class => 'required' %>
        <%= f.text_field :name %>
      </li>
      <li>
        <%= f.label :brand %>
        <%= f.text_field :brand %>
      </li>
      <li>
        <%= f.label :identifier %>
        <%= f.text_field :identifier %>
      </li>
      <li>
        <%= f.label :text %>
        <%= f.text_area :text %>
      </li>
    </ol>
  </fieldset>
  <fieldset>
    <%= f.label :image, @product.image.exists? ? tooltip(@product.image, @product.image_file_name, :img) : nil %>
    <%= f.file_field :image %>
  </fieldset>
  <fieldset>
    <%= f.submit %>
  </fieldset>
<% end %>
