<h1>List all orders</h1>

<%= form_tag do %>
  <%= link_to 'New order', new_product_path %><br />
  With selected:
  <%= submit_tag 'Copy', :disabled => true %>
  <%= submit_tag 'Delete', :disabled => true %>
  <table>
    <thead>
      <tr>
        <th />
        <th>ID</th>
        <th>Product</th>
        <th>Options</th>
        <th>User</th>
        <th>Shop</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= check_box_tag 'order_ids', order.id %></td>
          <td>#<%= order.id %></td>
          <td><%= order.product.name %></td>
          <td><%= tooltip(order.options, t('option', :count => order.options.count), :text) %></td>
          <td><%= order.user.name %></td>
          <td><%= order.user.shop.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
